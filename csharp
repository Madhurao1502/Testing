  // Open proximity data dialog
  async openProximityDataDialog(element: any): Promise<void> {
    try {
      const currentFilters = await firstValueFrom(this.commonService.currentFilters$);
      
      const dialogRef = this.dialog.open(ProximityDialogComponent, {
        width: '700px',
        maxWidth: '90vw',
        maxHeight: '80vh',
        data: {
          storeNumber: element.StoreNumber,
          storeName: element.StoreName,
          empId: element.EmpId,
          optimalCollectorId: element.OptimalCollectorId,
          assignedTo: element.AssignedTo || element.EmployeeName,
          firstName: element.FirstName,
          lastName: element.LastName,
          isActiveFSR: element.IsActiveFSR,
          terminationDate: element.TerminationDate,
          countryId: currentFilters?.country_id || '1'
        },
        disableClose: false
      });

      dialogRef.afterClosed().subscribe(result => {
        if (result) {
          // Handle any changes when dialog is closed
          // console.log('Proximity dialog closed with result:', result);
        }
      });
    } catch (error) {
      this.snackbar.openSnackBar(error,'error');
      console.error('Error opening proximity dialog:', error);
    }
  }


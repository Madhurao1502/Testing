<h2 mat-dialog-title class="title-style" cdkDrag cdkDragRootElement=".cdk-overlay-pane" cdkDragHandle>
  <span>{{ getDialogTitle() }}</span>
</h2>

<mat-dialog-content class="assignment-dialog-content">

                  <th>Assigned To</th>
                  <th>Status</th>
                  <th>Progress</th>
                  <th>Due Time</th>
                  <th>Actions</th>
                </tr>
                <tr *ngFor="let task of subgridData">
                  <td>{{task.TaskName}}</td>
                  <td>
                    <span class="assignment-link" (click)="openTaskAssignment(task)">
                      {{task.AssignedTo}}
                    </span>
                  </td>
                  <td>
                    <span class="status-badge" [class]="'status-' + task.Status?.toLowerCase()">
                      {{task.Status}}
                    </span>

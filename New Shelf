              </ng-container>
          
              <!-- Employee Name -->
              <ng-container matColumnDef="empName">
                  <th mat-header-cell *matHeaderCellDef style="width: 200px; color: #fff3f3;">Employee Name </th>
                  <td mat-cell *matCellDef="let element">
                      {{element.firstName}} {{element.lastName}}
                      <mat-icon *ngIf="element.empId == data.OptimalCollectorId" 
                                style="vertical-align: bottom; color: royalblue;" 
                                matTooltip="Optimal Collector">stars</mat-icon>
                      <mat-icon *ngIf="element.empId == data.CollectorId" 
                                style="vertical-align: bottom;" 
                                matTooltip="Current Collector">person_pin</mat-icon>
                  </td>
              </ng-container>
          
              <!-- Employee cost -->
              <ng-container matColumnDef="cost">
                  <th mat-header-cell *matHeaderCellDef style="width: 100px; color: #fff3f3;">Cost </th>

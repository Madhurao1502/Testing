  <span>{{ getDialogTitle() }}</span>
</h2>

<mat-dialog-content class="assignment-dialog-content">
  <!-- Filter Section -->
  <div class="filter-section" [formGroup]="filterForm">
    <div class="filter-row">
      <mat-form-field appearance="outline">

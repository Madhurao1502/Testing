  // }

  // Check if a specific row is expanded
  isRowExpanded(element: any): boolean {
    return this.selectedRows.has(element);
  }

  // Data load request handler
  onDataLoadRequest(event: {directive: CdkDetailRowDirective, rowData: any}): void {
    const { directive, rowData } = event;
    const storeKey = rowData.StoreNumber || rowData.store_number;
    
    // Track expansion state for caret rotation
    if (directive.isExpanded) {
      this.expandedRows.add(directive);
      this.selectedRows.add(rowData);
      
      // Load data if expanding
      if (this.expandedRowsData.has(storeKey)) {
        const cachedData = this.expandedRowsData.get(storeKey);
        directive.setSubgridData(cachedData?.data || [], cachedData?.weekType || 'current');
      } else {
        this.loadSubgridDataForRow(rowData)
          .then(responseData => {
            directive.setSubgridData(responseData.data || [], responseData.weekType || 'current');
          })
          .catch(error => {
            console.error('Error loading subgrid data:', error);
            directive.setSubgridData([], 'current');
          });
      }
    } else {
      // Collapsing - remove from tracking
      this.expandedRows.delete(directive);
      this.selectedRows.delete(rowData);
      
      // Update allExpanded flag if needed
      if (this.allExpanded && this.expandedRows.size < this.getCurrentPageData().length) {
        this.allExpanded = false;
      }
    }
    
    // Trigger change detection to update caret icons
    this.cdr.detectChanges();
  }

  // Week type display methods
  getWeekTypeDisplayName(): string {
    switch (this.currentWeekType) {
      case 'current': return 'Current Week Tasks';
      case 'future': return 'Future Week Planning';
      case 'previous': return 'Previous Week History';
      default: return 'Store Assignment Data';
    }
  }

  getWeekTypeClass(): string {
    return `week-${this.currentWeekType}`;
  }

  // Data formatting methods for different week types
  formatTaskCompleted(value: any): string {
    return value?.toLowerCase() === 'yes' ? 'Yes' : 'No';
  }



  formatCostOver(value: any): string {
    return value ? `${value}` : 'N/A';
  }

  formatGuaranteedMiles(value: any): string {
    return value ? `${value}` : 'N/A';
  }

  formatAvgCost(value: any): string {
    // Return blank if null or empty
    if (value === null || value === undefined || value === '') {
      return '';
    }
    
    // Convert to number
    const numValue = parseFloat(value);
    
    // Return blank if not a valid number
    if (isNaN(numValue)) {
      return '';
    }
    
    // Format as currency (including zero)
    return `$${numValue.toFixed(2)}`;
  }

  formatWk1Costs(row: any): string {
    const prod = parseFloat(row.WK1FSRProdCost || 0);
    const travel = parseFloat(row.WK1StoreTravelCost || 0);
    const ovg = parseFloat(row.WK1StoreTravelOvgCost || 0);
    const total = prod + travel + ovg;
    return total > 0 ? `$${total.toFixed(2)}` : '$0.00';
  }

  formatWk2Costs(row: any): string {
    const prod = parseFloat(row.WK2FSRProdCost || 0);
    const travel = parseFloat(row.WK2StoreTravelCost || 0);
    const ovg = parseFloat(row.WK2StoreTravelOvgCost || 0);
    const total = prod + travel + ovg;
    return total > 0 ? `$${total.toFixed(2)}` : '$0.00';
  }

  // Status badge classes
  getTaskCompletedClass(value: any): string {
    return value?.toLowerCase() === 'yes' ? 'completed' : 'incomplete';
  }



  getCostOverClass(value: any): string {
    return value?.toLowerCase() === 'yes' ? 'cost-over' : 'cost-ok';
  }

  // Dialog methods
  async openAssignmentDialog(row: any, mode: 'StoreLevel' | 'TaskLevel' = 'StoreLevel'): Promise<void> {
    try {
      const currentFilters = await firstValueFrom(this.commonService.currentFilters$);
      
      if (!currentFilters || Object.keys(currentFilters).length === 0) {
        console.warn('No filters applied. Cannot open assignment dialog.');
        return;
      }
      
      const dialogRef = this.dialog.open(AssignmentDialogComponent, {
        width: '90vw',
        maxWidth: '1200px',
        height: '80vh',
        data: {
          storeNumber: row.StoreNumber,
          storeName: row.StoreName,
          iriWeek: row.IriWeek,
          territoryId: currentFilters.territory_id,
          mode: 'StoreLevel'
        },
        disableClose: true
      });

      dialogRef.afterClosed().subscribe(result => {
        if (result) {
          this.refreshGridData();
        }
      });
    } catch (error) {
      console.error('Error opening assignment dialog:', error);
    }
  }

  // Method to check if EmpId matches OptimalCollectorId (handles comma-separated EmpIds)
  isOptimalCollectorMatch(empId: string | null | undefined, optimalCollectorId: string | null | undefined): boolean {
    // Check if both values exist and are not empty strings
    if (!empId || !optimalCollectorId || empId.trim() === '' || optimalCollectorId.trim() === '') {
      return false;
    }
    
    // Convert to strings and trim
    const empIdStr = String(empId).trim();
    const optimalIdStr = String(optimalCollectorId).trim();
    
    // Handle comma-separated EmpIds
    if (empIdStr.includes(',')) {
      const empIds = empIdStr.split(',').map(id => id.trim());
      return empIds.includes(optimalIdStr);
    }
    
    // Simple comparison for single EmpId (case-insensitive)
    return empIdStr.toLowerCase() === optimalIdStr.toLowerCase();
  }
  
  // Helper method to check if OptimalCollectorId exists and is valid
  hasOptimalCollector(optimalCollectorId: string | null | undefined): boolean {
    return !!optimalCollectorId && String(optimalCollectorId).trim() !== '';
  }
  
  // Debug helper - call this from console to check values
  debugCollectorMatch(element: any): void {
    console.log('Debug Collector Match:', {
      EmpId: element.EmpId,
      OptimalCollectorId: element.OptimalCollectorId,
      hasOptimal: this.hasOptimalCollector(element.OptimalCollectorId),
      isMatch: this.isOptimalCollectorMatch(element.EmpId, element.OptimalCollectorId),
      empIdType: typeof element.EmpId,
      optimalIdType: typeof element.OptimalCollectorId
    });
  }

  // Open proximity data dialog
  async openProximityDataDialog(element: any): Promise<void> {
    try {
      const currentFilters = await firstValueFrom(this.commonService.currentFilters$);
      

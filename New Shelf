import { HttpClient } from '@angular/common/http';
import { Component, Inject, OnDestroy, OnInit } from '@angular/core';
import { CommonService } from 'src/app/shared/common.service';
import { SnackbarService } from 'src/app/shared/snackbar.service';
import { Subject, takeUntil } from 'rxjs';
import { MatTableDataSource } from '@angular/material/table';
import { MAT_DIALOG_DATA, MatDialogRef } from '@angular/material/dialog';



@Component({
  selector: 'app-closest-fsr-dialog',
  templateUrl: './closest-fsr-dialog.component.html',
  styleUrls: ['./closest-fsr-dialog.component.css']
})
export class ClosestFsrDialogComponent implements OnInit, OnDestroy {
  private unsubscribe$ = new Subject<void>();
  public showSpinner: boolean = false;
  displayedColumns:string[]=['empId','empName','cost','time','toll','phone','email'];
  dataSource:MatTableDataSource<any>
  isCollectorIDFound:boolean=false
  isNonSampleCStore:boolean=false

  constructor(
    public dialogRef: MatDialogRef<ClosestFsrDialogComponent>,
    @Inject(MAT_DIALOG_DATA) public data: any,
    private http: HttpClient, 
    @Inject('BASE_URL') private baseUrl: string,
    public service: CommonService,
    private _snackBar: SnackbarService,
  ) { }

  ngOnInit(): void {
    this.loadClosestFsrData();
  }

  ngOnDestroy(): void {
    this.unsubscribe$.next();
    this.unsubscribe$.complete();
  }

    //   CountryId: this.data.CountryId || '1'
  loadClosestFsrData(): void {
    this.showSpinner = true;
    this.http.post<any[]>(this.baseUrl + 'api/TaskAssinment/GetProximityData', {
      StoreNumber: this.data.StoreNumber
    }).pipe(takeUntil(this.unsubscribe$)).subscribe({
      next: (response) => {
        if (response.length <= 0) {
          this._snackBar.openSnackBar("No Data Found", 'error');
          this.showSpinner = false;
          return;
        }

        // Check if it's a non-sample C store
        if (response[0].NonSampleCStore == 'NON SAMPLE C STORE' || response[0].nonSampleCStore == 'NON SAMPLE C STORE') {
          this.isNonSampleCStore = true;
          this.showSpinner = false;
          return;
        } else {
          this.isNonSampleCStore = false;

          // Map response to handle both PascalCase and camelCase
          const mappedData = response.map(item => ({
            empId: item.EmpId || item.empId,
            firstName: item.FirstName || item.firstName,
            lastName: item.LastName || item.lastName,
            time: item.Time || item.time,
            toll: item.Toll || item.toll,
            totalCost: item.TotalCost || item.totalCost,
            costRank: item.CostRank || item.costRank,
            email: item.fsrEmailID||item.fsrEmailIDPersonal,
            fsrPhoneNum:item.fsrPhoneNumPersonal||item.fsrPhoneNumShipping
          }));

          const sortedData = mappedData.sort((a, b) => (a.costRank || 0) - (b.costRank || 0));
          this.dataSource = new MatTableDataSource(sortedData);

          this.isCollectorIDFound = !mappedData.some(emp => emp.empId == this.data.CollectorId);
          this.showSpinner = false;
        }
      },
      error: (error) => {
        console.error(error);
        this._snackBar.openSnackBar("Error loading data", 'error');
        this.showSpinner = false;
      },
    });
  }

  onClose(): void {
    this.dialogRef.close();
  }

 
}

<div cdkDrag cdkDragRootElement=".cdk-overlay-pane" cdkDragBoundary=".cdk-overlay-container">
  <h4 mat-dialog-title class="title-style" cdkDragHandle>

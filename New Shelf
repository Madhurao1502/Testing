            <mat-header-cell *matHeaderCellDef mat-sort-header="WK1FSRProdCost" class="mat-header-style">W{{this.currentFilters.iri_week}} Cost</mat-header-cell>
            <mat-cell *matCellDef="let element" style="text-align: right;" [ngClass]="{'negative':element.WK1FSRProdCost >0,'positive':element.WK1FSRProdCost <=0}">{{element.WK1FSRProdCost | currencyFormat}}</mat-cell>
          </ng-container>

             <!-- WK1 Travel Costs Column -->

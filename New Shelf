              </ng-container>

                 <!-- Email -->
              <ng-container matColumnDef="email">
                  <th mat-header-cell *matHeaderCellDef style="width: 100px; color: #fff3f3;">Email </th>
                  <td mat-cell *matCellDef="let element"> {{element.email}}</td>
              </ng-container>

                      <!-- phone -->
              <ng-container matColumnDef="phone">
                  <th mat-header-cell *matHeaderCellDef style="width: 100px; color: #fff3f3;">Phone </th>
                  <td mat-cell *matCellDef="let element"> {{element.fsrPhoneNum}}</td>
              </ng-container>
          
              <tr mat-header-row *matHeaderRowDef="displayedColumns; sticky: true"></tr>
              <tr mat-row *matRowDef="let row; columns: displayedColumns;"></tr>
          </table>
      </div>

      <!-- Warning Messages -->
      <div class="note-message" *ngIf="isCollectorIDFound && dataSource?.data?.length > 0 && data.IsActiveFSR == 'A'">
          <span class="highlighted-note">{{data.FirstName}} {{data.LastName}}</span>, is not in the top 5 most cost-effective collectors for this store
      </div>
      <div class="note-message" *ngIf="isCollectorIDFound && dataSource?.data?.length > 0 && data.IsActiveFSR == 'T'">
          <span class="highlighted-note">{{data.FirstName}} {{data.LastName}}</span>, who collected this Store, was Terminated
      </div>
  </mat-dialog-content>

  <!-- Non-Sample Store Message -->
  <mat-dialog-content class="mat-dialog-body" *ngIf="isNonSampleCStore">
      <div class="note-message" style="text-align: center;">
          <span class="highlighted-note">Proximity is not calculated for non-sample stores</span>
      </div>
  </mat-dialog-content>

  <!-- Loading Spinner -->
  <footer>
      <div class="mat-spinner-container">
          <mat-spinner mode="indeterminate" *ngIf="showSpinner"></mat-spinner>
          <div *ngIf="showSpinner" style="position: relative; left: 10px">
              Loading closest FSR data...
          </div>
      </div>
  </footer>
</div>

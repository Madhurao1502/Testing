  private getTaskCompletedSortValue(status: any): number {
    if (!status) return 3;
    const statusStr = status.toString().toLowerCase();
    switch (statusStr) {
      case 'yes':
      case 'completed':
      case 'complete':
        return 1;
      case 'no':
      case 'incomplete':
      case 'pending':
        return 2;
      default:
        return 3;
    }
  }

  

  private getCostOverSortValue(costOver: any): number {
    if (!costOver) return 2;
    const costStr = costOver.toString().toLowerCase();
    switch (costStr) {
      case 'no':
      case 'false':
        return 1;
      case 'yes':
      case 'true':
        return 2;
      default:
        return 2;
    }
  }

  // ADD: Enhanced money formatting for display
  formatMoney(value: any): string {
    if (!value || value === 0 || value === '0') return '$0.00';
    
    const num = parseFloat(value);
    if (isNaN(num)) return '$0.00';
    
    return '$' + num.toLocaleString('en-US', { 
      minimumFractionDigits: 2, 
      maximumFractionDigits: 2 
    });
  }

  // ADD: Sort change handler with logging
  onSortChange(event: any): void {
    this.currentSortColumn = event.active;
    this.currentSortDirection = event.direction;    
    // Collapse all expanded rows when sorting
    this.forceCollapseAllRows();
    this.resetExpansionState();
  }

  // ADD: Get current sort info for display
  getCurrentSortInfo(): { column: string, direction: string } {
    return {
      column: this.currentSortColumn || 'None',
      direction: this.currentSortDirection || 'None'
    };
  }

async createAndSendWorkOrder(element: any): Promise<void> {
  try {
    element.isProcessingWorkOrder = true;
    this.commonService.show('create-work-order');
    
    // Validate that store has an FSR assigned
    if (!element.AssignedTo || element.AssignedTo === 'NOT ASSIGNED' || element.AssignedTo.trim() === '') {
      this.snackbar.openSnackBar('No FSR assigned to this store', 'error');
      element.isProcessingWorkOrder = false;
      this.commonService.hide('create-work-order');
      return;
    }
    
    const currentFilters = await firstValueFrom(this.commonService.currentFilters$);
    
    if (!currentFilters || !currentFilters.iri_week || !currentFilters.territory_id) {
      this.snackbar.openSnackBar('Please apply IRI week and territory filters first.', 'error');
      element.isProcessingWorkOrder = false;
      return;
    }
    
    // Get FSR information - parse assigned to names and EmpIds
    const fsrList = this.parseAssignedToWithEmpIds(element);
    
    if (!fsrList || fsrList.length === 0) {
      this.snackbar.openSnackBar('No FSR assigned to this store', 'error');
      element.isProcessingWorkOrder = false;
      return;
    }

   
    
    // Try to enrich FSR list with email from subgrid data if available
    const enrichedFsrList = this.enrichFsrListWithEmail(element, fsrList);
    
    // Filter out FSRs without email (they can't receive emails)
    const validFsrs = enrichedFsrList.filter(fsr => fsr.empId && fsr.empId.trim() !== '');
    
    if (validFsrs.length === 0) {
      this.snackbar.openSnackBar('No valid FSR employee IDs found. Cannot generate work orders.', 'error');
      element.isProcessingWorkOrder = false;
      return;
    }

          
    // Process each FSR: create work order and send email
    let successCount = 0;
    let failureCount = 0;
    const errors: string[] = [];
    
    for (const fsr of validFsrs) {
      try {
        // Prepare work order parameters for this FSR
        const workOrderParams = {
          storeNumber: element.StoreNumber,
          storeName: element.StoreName,
          iriWeek: currentFilters.iri_week,
          territoryId: currentFilters.territory_id,
          empId: fsr.empId,
          fsrName: fsr.name,
          fsrEmail: fsr.email || '', 
          tasks: fsr.tasks || null ,
          countryId:currentFilters?.country_id || '1'
        };
        
        // Validate that we have required parameters
        if (!fsr.email || fsr.email.trim() === '') {
          errors.push(`FSR ${fsr.name}: Email ID is missing`);
          failureCount++;
          continue;
        }

          if (!fsr.empId || fsr.empId.trim() === '') {
          errors.push(`FSR ${fsr.name}: Employee ID is missing`);
          failureCount++;
          continue;
        }
        // Create work order for this FSR
        const workOrderResponse = await firstValueFrom(
          this.commonService.createWorkOrderForFSR(workOrderParams)
        );
        
        // Validate response
        if (!workOrderResponse || !workOrderResponse.success) {
          errors.push(`FSR ${fsr.name}: ${workOrderResponse?.message || 'Failed to create work order'}`);
          failureCount++;
          continue;
        }
        
        const sessionId = workOrderResponse.sessionId;
        
        if (!sessionId) {
          errors.push(`FSR ${fsr.name}: No session ID returned from work order creation`);
          failureCount++;
          continue;
        }
        
        // Send email for this FSR
        const emailResponse = await firstValueFrom(
          this.commonService.sendWorkOrderEmailToFSR(sessionId)
        );
        
        // Validate email response
        if (!emailResponse || !emailResponse.success) {
          errors.push(`FSR ${fsr.name}: ${emailResponse?.message || 'Failed to send email'}`);
          failureCount++;
          continue;
        }
        
        successCount++;
        
        // Small delay between FSRs to avoid overwhelming the system
        await this.delay(100);
        
      } catch (fsrError) {
        console.error(`Error processing FSR ${fsr.name}:`, fsrError);
        errors.push(`FSR ${fsr.name}: ${fsrError?.message || 'Unknown error'}`);
        failureCount++;
      }
    }
    
    // Show summary message
    if (successCount > 0 && failureCount === 0) {
      this.snackbar.openSnackBar(
        `Work orders created and emails sent successfully to ${successCount} FSR${successCount > 1 ? 's' : ''}!`, 
        'success'
      );
    } else if (successCount > 0 && failureCount > 0) {
      this.snackbar.openSnackBar(
        `Partially successful: ${successCount} work order${successCount > 1 ? 's' : ''} sent, ${failureCount} failed. ${errors.join('; ')}`, 
        'warning'
      );
    } else {
      this.snackbar.openSnackBar(
        `Failed to create work orders. Errors: ${errors.join('; ')}`, 
        'error'
      );
    }
    
    this.commonService.hide('create-work-order');
    
  } catch (error) {
    console.error('Error creating work order:', error);
    const errorMessage = error?.message || error?.error?.message || 'Unknown error occurred';
    this.snackbar.openSnackBar('Error: ' + errorMessage, 'error');
  } finally {
    element.isProcessingWorkOrder = false;
    this.cdr.detectChanges();
  }
}



/**
 * Parse AssignedTo and EmpId to get list of FSRs with their EmpIds
 * Handles comma-separated values for both AssignedTo and EmpId
 * Also retrieves email from grid data if available
 */
private parseAssignedToWithEmpIds(element: any): any[] {
  if (!element.AssignedTo || element.AssignedTo === 'NOT ASSIGNED' || element.AssignedTo.trim() === '') {
    return [];
  }
  
  // Split by comma to get individual FSR names
  const names = element.AssignedTo.split(',').map((name: string) => name.trim()).filter((name: string) => name);
  
  // Split EmpId by comma if it's comma-separated
  let empIds: string[] = [];
  if (element.EmpId && element.EmpId.trim() !== '') {
    empIds = element.EmpId.split(',').map((id: string) => id.trim()).filter((id: string) => id);
  }
  
  // Get email from grid data - check multiple possible field names
  const gridEmail = element.EmpEmailId || element.empEmailId || '';
  
  // Split email by comma if it's comma-separated (for multiple FSRs)
  let emails: string[] = [];
  if (gridEmail && gridEmail.trim() !== '') {
    emails = gridEmail.split(',').map((email: string) => email.trim()).filter((email: string) => email);
  }
  
  // Create FSR list with matched names and EmpIds
  const fsrList: any[] = [];
  
  // If EmpIds count matches names count, match them by index
  if (empIds.length === names.length) {
    for (let i = 0; i < names.length; i++) {
      fsrList.push({
        name: names[i],
        empId: empIds[i],
        email: (emails.length === names.length && emails[i]) ? emails[i] : (emails.length > 0 ? emails[0] : ''), // Use matching email or first email
        tasks: [] // Will be populated if subgrid data is available
      });
    }
  } else if (empIds.length > 0) {
    // If EmpIds don't match, use first EmpId for all (fallback)
    // This is a fallback scenario - ideally EmpIds should match names
    for (let i = 0; i < names.length; i++) {
      fsrList.push({
        name: names[i],
        empId: i < empIds.length ? empIds[i] : empIds[0], // Use first EmpId as fallback
        email: (emails.length === names.length && emails[i]) ? emails[i] : (emails.length > 0 ? emails[0] : ''),
        tasks: []
      });
    }
  } else {
    // No EmpIds available - only names
    // Note: This might not work without EmpIds, but we'll try to enrich from subgrid
    for (let i = 0; i < names.length; i++) {
      fsrList.push({
        name: names[i],
        empId: '', // Will be enriched from subgrid data
        email: (emails.length === names.length && emails[i]) ? emails[i] : (emails.length > 0 ? emails[0] : ''),
        tasks: []
      });
    }
  }
  
  return fsrList;
}

/**
 * Enrich FSR list with email and EmpId from subgrid data if available
 * Prefers email from grid data (already set in parseAssignedToWithEmpIds) over subgrid data
 */
private enrichFsrListWithEmail(element: any, fsrList: any[]): any[] {
  // Check if subgrid data is available for this store
  const storeKey = element.StoreNumber || element.store_number;
  const subgridData = this.expandedRowsData.get(storeKey);
  
  if (!subgridData || !subgridData.data || subgridData.data.length === 0) {
    // No subgrid data - return as is (Emails from grid data should already be set)
    console.log('No subgrid data available, using grid data email:', fsrList.map(f => ({name: f.name, email: f.email})));
    return fsrList;
  }
  
  // Group tasks by FSR (assignedTo) from subgrid data
  const tasksByFsr = this.groupTasksByFSR(subgridData.data);
  
  // Enrich FSR list with data from subgrid
  return fsrList.map(fsr => {
    // Try to find matching FSR in subgrid data by name
    const matchingFsrName = Object.keys(tasksByFsr).find(
      fsrName => fsrName.toLowerCase().includes(fsr.name.toLowerCase()) ||
                 fsr.name.toLowerCase().includes(fsrName.toLowerCase())
    );
    
    if (matchingFsrName && tasksByFsr[matchingFsrName].length > 0) {
      const firstTask = tasksByFsr[matchingFsrName][0];
      
      // Use subgrid data to enrich FSR info
      // Prefer email from grid data (already set), fallback to subgrid if grid email is empty
      const enrichedEmail = fsr.email || firstTask.email || firstTask.fsrEmail || firstTask.emailAddress || '';
      
      return {
        ...fsr,
        empId: fsr.empId || firstTask.empId || firstTask.emp_id || '', // Use subgrid EmpId if parent doesn't have it
        email: enrichedEmail, // Prefer grid email, fallback to subgrid email
        tasks: tasksByFsr[matchingFsrName] // Assign tasks specific to this FSR
      };
    }
    
    // No matching FSR found in subgrid - return as is (with grid email)
    console.log(`No matching FSR in subgrid for ${fsr.name}, using grid email: ${fsr.email}`);
    return fsr;
  });
}

private parseAssignedTo(assignedTo: string): any[] {
  if (!assignedTo || assignedTo === 'NOT ASSIGNED' || assignedTo.trim() === '') {
    return [];
  }
  
  // Split by comma to get individual FSR names
  const names = assignedTo.split(',').map(name => name.trim()).filter(name => name);
  
  // Return FSR info objects (you may need to fetch empId and email separately)
  return names.map(name => ({
    name: name,
    empId: '', // Will be populated from subgrid or additional API call
    email: '' // Will be populated from subgrid or additional API call
  }));
}

private groupTasksByFSR(subgridData: any[]): { [key: string]: any[] } {
  const grouped: { [key: string]: any[] } = {};
  
  subgridData.forEach(task => {
    const assignedTo = task.assignedTo || task.AssignedTo || '';
    
    if (!grouped[assignedTo]) {
      grouped[assignedTo] = [];
    }
    
    grouped[assignedTo].push(task);
  });
  
  return grouped;
}

    

  ngOnDestroy(): void {
    this.destroy$.next();
    this.destroy$.complete();
    this.unsubscribe$.next();
    this.unsubscribe$.complete();
  }
}


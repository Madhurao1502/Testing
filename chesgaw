  const newStartWeek = parseInt(sortedWeeks[0].startWeek, 10);
  const newEndWeek = parseInt(sortedWeeks[sortedWeeks.length - 1].startWeek, 10);

  const overlapsExistingWave = this.rightGridData.data.some(wave => {
    const existingStartWeek = parseInt(wave.startWeek, 10);
    const existingEndWeek = parseInt(wave.endWeek, 10);
    return (newStartWeek >= existingStartWeek && newStartWeek <= existingEndWeek) ||
           (newEndWeek >= existingStartWeek && newEndWeek <= existingEndWeek);
  });

  if (overlapsExistingWave) {
    this.errorMessage = "New selection cannot overlap with existing waves.";
    return;
  }

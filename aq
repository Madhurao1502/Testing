
private insertChildRowsIntoDataSource(parentRow: any, childData: any[], weekType: string): void {
  const parentStoreKey = parentRow.StoreNumber || parentRow.store_number;
  
  try {
    if (!childData || childData.length === 0) {
      // If no child data, remove any existing children for this parent
      this.childRowsMap.delete(parentStoreKey);
      return;
    }
    
    // Map child data to match parent column structure
    const childRows = childData.map((child, index) => ({
      ...child,
      isChildRow: true,
      isFirstChild: index === 0,
      isLastChild: index === childData.length - 1,
      parentStoreNumber: parentRow.StoreNumber,
      
      // Map all the fields...
      StoreNumber: child.storeNumber,
      FldTerrtyNbr: parentRow.FldTerrtyNbr || '',
      // ... rest of your field mappings
    }));
    
    // Store child rows in the map (NOT in datasource)
    this.childRowsMap.set(parentStoreKey, childRows);
    
    console.log(`Child rows stored for ${parentStoreKey}: ${childRows.length} rows`);
    this.cdr.detectChanges();
    
  } catch (error) {
    console.error('Error inserting child rows:', error);
  }
}

private updateDataSource(data: any[]): void {
  this.commonService.show('table-update');
  
  try {
    // ✅ STEP 1: Clear ALL old data FIRST
    this.forceCollapseAllRows();
    this.resetExpansionState();
    this.expandedRowsData.clear();  // ← CLEAR CACHED CHILD ROWS
    
    // ✅ STEP 2: Clear search
    this.searchControl.setValue('', { emitEvent: false });
    
    // ✅ STEP 3: Map new data as parent rows only
    this.parentRowsData = data.map(row => ({ ...row, isChildRow: false }));
    this.originalData = [...this.parentRowsData];
    
    // ✅ STEP 4: Reset paginator to first page
    if (this.paginator) {
      this.paginator.pageIndex = 0;
      this.applyParentRowPagination();
    } else {
      this.dataSource.data = [...this.parentRowsData];
    }
    
    // ✅ STEP 5: Reset sort state
    this.currentSortColumn = '';
    this.currentSortDirection = '';
    this.dataSource.sort = this.sort;
    
    // ✅ STEP 6: Update paginator length
    this.updatePaginatorLength();
    
    // ✅ STEP 7: Force change detection
    this.cdr.markForCheck();
    this.cdr.detectChanges();
    
  } finally {
    this.commonService.hide('table-update');
  }
}


